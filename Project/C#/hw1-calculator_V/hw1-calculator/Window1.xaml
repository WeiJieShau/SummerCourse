<Window x:Class="hw1_calculator.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw1_calculator"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <ListView x:Name="List1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,10,245" FontSize="20" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="492,308,0,0" VerticalAlignment="Top" Height="37" Width="88" Click="DeleteButton_Click_1"/>
        <Button x:Name="Back_btn" Content="Back" HorizontalAlignment="Left" Margin="199,308,0,0" VerticalAlignment="Top" Width="88" Height="37" Click="Back_btn_Click"/>
    </Grid>
</Window>
